speeds = "fastest" "fast" "normal" "slow" "slowest"


.keys
   display grid
   position absolute
   bottom 12vh
   left 50%
   transform translateX(-50%)
   grid-template-columns: repeat(13, 1fr);
   justify-items: center
   grid-gap 1.5rem;
   margin: 0 auto;
   @media (max-width: 800px)
      grid-template-columns: repeat(7, 1fr);
      grid-gap 1.5rem 3rem;
      & .key:nth-child(22)
         grid-column: 2/3



.key
   transition all 200ms ease
   border-radius 50%
   // font-size 4vh
   position relative
   cursor pointer
   display grid
   place-items center
   text-transform: uppercase
   width 7vh
   height 7vh
   display grid
   place-items center

   .name
      font-size 4vh
      display grid
      place-items center
      @media (max-width: 800px)
         font-size 3.5vh
         width 5vh
         height 5vh

   .stats
      opacity 0
      padding 10px
      position absolute
      transform translateY(-120%)
      top 0
      font-size 2vh
      min-width 200px
      z-index 100
      pointer-events none
      box-shadow 0 -10px 40px var(--bodybg), 0 -10px 50px var(--bodybg)

      .speed
         font-size 2em
         margin-bottom 0.2em
         font-weight bold
         .unit
            font-size 1em
            margin-left 0.5rem

      .times
         font-size 0.8em
         letter-spacing: 0.2em




speed(class)
   anim = unquote('glow' + class)
   name = ('glow' + class)
   col = var(unquote('--' + class))
   @keyframes {name}
         from
            box-shadow 0 0 2rem col
         to
            box-shadow 0 0 4rem col

   .{class}
      animation anim 2s ease infinite alternate
      box-shadow 0 0 2rem col
      transition all 200ms ease
      color col
      background var(--bodybg)

      &:hover
         color var(--bodybg)
         background col !important
         animation none
         transform scale(1.3)
         .stats
            opacity 1

      .stats
         transition all 200ms ease-out
         background col !important
         color var(--bodybg)
         z-index 100

      &.pressed
         color var(--bodybg)
         background col !important
         transform scale(1.5)
         .stats
            transition none



for s in speeds
   speed(s)


